<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/attachment_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="6dp"
    android:layout_marginTop="4dp"
    android:background="@drawable/bg_attachment"
    android:gravity="center_vertical">

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_attachement"
        android:layout_marginEnd="6dp"
        app:tint="#555555" />

    <TextView
        android:id="@+id/attachment_filename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="fichier.pdf"
        android:textColor="#333333"
        android:textSize="13sp"
        android:layout_marginEnd="8dp" />

    <ImageView
        android:id="@+id/attachment_remove"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:src="@drawable/ic_close"
        android:contentDescription="Supprimer"
        app:tint="#FF0000"
        android:layout_marginStart="4dp" />
</LinearLayout>
